
@{
    ViewBag.Title = "Cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="container">
    
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <h2>Cars</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Make
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Costg
                        </th>
                        <th>
                            View
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Encode(item.Make)
                            </td>
                            <td>
                                @Html.Encode(item.Model)
                            </td>
                            <td>
                                @Html.Encode(item.Quantity)
                            </td>
                            <td>
                                @Html.Encode(item.Cost)
                            </td>
                            <td>
                                @Html.ActionLink("Rent", "Rent", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



