@model DDWAssignment.ViewModels.UserLoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>wLogin</h2>
@Html.Encode(ViewData["Message"])
<div class="container">

    @using (Html.BeginForm("VMLogin", "User", FormMethod.Post, new { @class = "form-group", role = "form" })) //Notice the name of the controller method as part of BeginForm, this needs to be correct!
            {

        <fieldset>
            <div class="form-group">
                <div class="col">
                    @Html.LabelFor(u => u.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    @Html.ValidationMessageFor(u => u.Username)
                    @Html.EditorFor(u => u.Username, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col">
                    @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    @Html.ValidationMessageFor(u => u.Password)
                    @Html.PasswordFor(u => u.Password, htmlAttributes: new { @class = "form-control" })
                </div>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </fieldset>

    }
    @{Html.EndForm();}


    </div>


